{
  "name": "tai-mcp-email-server",
  "version": "1.0.0",
  "description": "TAI MCP Email Server - enables AI agents to interact with email through CF Mail Bridge API",
  "type": "module",
  "main": "./build/src/index.js",
  "bin": {
    "tai-mcp-email-server": "./build/src/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x build/src/index.js",
    "dev": "tsc --watch",
    "start": "node build/src/index.js",
    "inspector": "npm run build && npx @modelcontextprotocol/inspector build/src/index.js",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint src tests --ext .ts",
    "clean": "rm -rf build"
  },
  "keywords": [
    "mcp",
    "email",
    "ai",
    "server",
    "cloudflare"
  ],
  "author": "TAI Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "node-fetch": "^3.3.2",
    "turndown": "^7.2.0",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
